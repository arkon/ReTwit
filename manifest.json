{
  "name": "ReTwit for Twitter",
  "short_name": "ReTwit",
  "version": "2.5.2",
  "description": "Give Twitter the modern look it's been waiting for!",
  "manifest_version": 2,
  "permissions": ["storage", "tabs", "notifications"],
  "web_accessible_resources": ["sm-quote.png", "options.html"],
  "options_page": "options.html",
  "background": {
    "scripts": ["install.min.js"],
    "persistent": false
  },
  "content_scripts": [ {
    "matches": [ "http://twitter.com/*", "https://twitter.com/*" ],
    "css": ["main.min.css"],
    "js": ["jquery-1.9.1.min.js", "script.min.js"],
    "run_at": "document_start"
  } ],
  "page_action": {
    "default_icon": { "19": "icon19.png", "38": "icon38.png" },
    "default_title": "ReTwit Options"
  },
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "homepage_url": "https://chrome.google.com/webstore/detail/retwit-for-twitter/bkpjdbhepoejcinkccodijdpoifkfbnl?hl=en"
}